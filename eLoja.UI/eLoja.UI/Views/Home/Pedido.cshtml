
@model PedidoViewModel

@{
	ViewData["Title"] = "Pedido";
}

<div class="text-center">
	<h1 class="display-4">Pedido</h1>
</div>

<br />

<div class="container">
	@if (Model.RealizadoComSucesso)
	{
		<div class="alert alert-success">
			Pedido @Model.CodigoPedido Realizado
		</div>
	}
	else
	{
		<div class="alert alert-danger">
			Ocorreu um erro ao realizar a compra do produto 
		</div>
	}
	<table class="table table-bordered">
		<thead>
			<tr>
				<th scope="col">Produto</th>
				<th scope="col">Valor</th>
				<th scope="col">Quantidade</th>
				<th scope="col">Total</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td scope="row">@Model.Produto.Nome</td>
				<td scope="row">@Model.Produto.Valor.ToString("C")</td>
				<td scope="row">@Model.Produto.Quantidade</td>
				<td scope="row">@Model.ValorPedido.ToString("C")</td>
			</tr>
		</tbody>
	</table>
</div>