
@model UsuarioViewModel

@{
	ViewData["Title"] = "Usuário";
}

<div class="text-center">
	<h1 class="display-4">Cadastro de Usuário</h1>
</div>

<form asp-action="CadastraUsuario" asp-controller="Usuario">
	@Html.AntiForgeryToken()

	@if (Model != null)
	{
		@if (Model.Cadastrado)
		{
			<div class="alert alert-success">
				Usuário Cadastrado com Sucesso
			</div>
		}
		else
		{
			<div class="alert alert-danger">
				Ocorreu um erro ao Cadastrar o Usuário
			</div>
		}
	}

	<div class="form-group">
		<label asp-for="@Model.Nome"></label>
		<input type="text" asp-for="@Model.Nome" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.Email"></label>
		<input type="email" asp-for="@Model.Email" class="form-control" />
	</div>
	<input type="submit" value="Salvar" class="btn btn-primary" />
</form>